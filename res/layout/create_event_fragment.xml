<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <EditText
        android:id="@+id/create_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/create_event_name"
        android:textSize="20sp"
        android:layout_margin="6dp" />

    <EditText
        android:id="@+id/create_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/create_event_description"
        android:textSize="20sp"
        android:layout_margin="6dp" />

    <EditText
        android:id="@+id/create_event_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/create_event_start_time"
        android:textSize="20sp"
        android:layout_margin="6dp" />

    <EditText
        android:id="@+id/create_event_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/create_event_duration"
        android:textSize="20sp"
        android:layout_margin="6dp" />

    <EditText
        android:id="@+id/create_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/create_event_location"
        android:textSize="20sp"
        android:layout_margin="6dp" />

    <Button
        android:id="@+id/create_event_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:text="@string/create_event_color"
        android:textSize="20sp"
        android:layout_margin="6dp" />

</LinearLayout>