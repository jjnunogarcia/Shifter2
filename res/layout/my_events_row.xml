<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:id="@+id/my_events_row_color_border"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_events_row_color_background">

        <RelativeLayout
            android:id="@+id/my_events_row_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@android:color/holo_red_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_events_row_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/my_events_row_color_border"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/my_events_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tarde" />

        <TextView
            android:id="@+id/my_events_row_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_events_row_name"
            android:layout_marginTop="5dp"
            android:text="Mi turno de tarde" />

        <TextView
            android:id="@+id/my_events_row_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_events_row_description"
            android:layout_marginTop="5dp"
            android:text="Comienzo: 16:00" />

        <TextView
            android:id="@+id/my_events_row_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_events_row_name"
            android:layout_alignParentRight="true"
            android:text="8h" />

        <TextView
            android:id="@+id/my_events_row_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_events_row_start_time"
            android:layout_alignParentRight="true"
            android:text="Melilla" />

    </RelativeLayout>

</RelativeLayout>